# encoding: utf-8
# frozen_string_literal: true

namespace :sass do
  task :compile do
    # system 'sass assets/stylesheets/_full.scss css/fa-bs.css'
    system 'sass assets/stylesheets/_full.scss css/fa-bs.min.css --style compressed'
  end

  task :fonts do
    system 'cp -r assets/fonts .'
  end

  task :watch do
    system 'sass --watch assets/stylesheets/_full.scss:css/fa-bs.min.css --style compressed'
  end
end
